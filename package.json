{
  "name": "keeping-tabs",
  "version": "1.0.4",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "changelog": "auto-changelog -p"
  },
  "author": "aminosyangtti <aminosyangtti@example.com>",
  "license": "ISC",
  "description": "A clipboard management app that seamlessly synchronizes your clipboard content across all your devices.",
  "dependencies": {
    "@supabase/supabase-js": "^2.44.4",
    "auto-changelog": "^2.4.0",
    "auto-launch": "^5.0.6",
    "electron-log": "^5.1.7",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.2.1"
  },
  "devDependencies": {
    "electron": "^31.3.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.aminosyangtti.keeping-tabs",
    "productName": "Keeping Tabs",
    "nsis": {
      "perMachine": true,
      "allowElevation": true
    },
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "aminosyangtti",
        "repo": "keeping-tabs"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "snap",
        "rpm"
      ],
      "icon": "build/icon.png",
      "category": "Utility",
      "desktop": {
        "StartupWMClass": "Keeping Tabs"
      }
    },
    "mac": {
      "category": "public.app-category.utilities",
      "extendInfo": {
        "LSUIElement": 1
      },
      "loginItemSettings": {
        "enabled": true,
        "hide": false
      },
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.png"
    }
  }
}
