{
  "name": "keeping-tabs",
  "version": "1.0.2",
  "main": "main.js",
  "scripts": {
    "start": "NODE_ENV=development electron .",
    "changelog": "auto-changelog -p",
    "build": "electron-builder"
  },
  "author": "aminosyangtti <aminosyangtti@example.com>",
  "license": "ISC",
  "description": "A clipboard management app that seamlessly synchronizes your clipboard content across all your devices.",
  "dependencies": {
    "@supabase/supabase-js": "^2.44.4",
    "auto-changelog": "^2.4.0",
    "base64-arraybuffer": "^1.0.2",
    "crypto-js": "^4.2.0",
    "electron-log": "^5.1.7",
    "dotenv": "^16.4.5",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.2.1",
    "fs": "^0.0.1-security",
    "open-graph-scraper": "^6.7.0",
    "util": "^0.12.5",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "electron": "^31.3.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.aminosyangtti.keeping-tabs",
    "nsis": {
    "perMachine": true, 
    "allowElevation": true
  },
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "aminosyangtti",
        "repo": "keeping-tabs",
        "token": "${SECRET_KEY}"
      }
    ],
    "extraMetadata": {
      "supabaseAnonKey": "${SUPABASE_ANON_KEY}",
      "supabaseURL": "${SUPABASE_URL}"
    },
  
    "win": {
      "target": "nsis",
      "icon": "build/icon_light.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "snap"
      ],
      "icon": "build/icon_light.png"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon_light.png"
    }
  }
}
